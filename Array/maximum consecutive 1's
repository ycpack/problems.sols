 public static int maxOnes(int arr[]){
        int res=0 , curr=0;
        int n= arr.length;
        for(int i=0; i<n; i++){
            if (arr[i] == 0) {
                curr = 0;

            }

            else
                curr++;
            res=Math.max(res,curr);

        }
        return res;
    }
