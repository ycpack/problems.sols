Input: 5

Output:
* 
* * 
* * * 
* * * * 
* * * * *
* * * *
* * *
* *
*

// code

class Solution {

    void printTriangle(int n) {
        // code here
        for(int i=1; i<=2*n-1; i++){
            int stars=i;
            if(i>n) stars=2*n-i;
            for(int j=1; j<=stars; j++){
                System.out.print("* ");
            }
            System.out.print("\n");
        }
    }
}
